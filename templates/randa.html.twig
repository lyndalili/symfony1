						                    <li><a href="#"><i class="fa fa-reddit"></i></a></li>
						                </ul>
						-->
					</div>
					<!--/.nav-collapse -->
				</div>
			</nav>


			<div class="container">
				<header>
					<a href="{{ path('post_index') }}"><img src="{{ asset('images/logo.png')}}"></a>
				</header>

				{% block body %}{% endblock %}

			</div>


			<footer class="footer">

				<div class="footer-socials">
					<a href="#">
						<i class="fa fa-facebook"></i>
					</a>
					<a href="#">
						<i class="fa fa-twitter"></i>
					</a>
					<a href="#">
						<i class="fa fa-instagram"></i>
					</a>
					<a href="#">
						<i class="fa fa-google-plus"></i>
