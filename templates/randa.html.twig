		<meta name="description" content="">
		<meta name="author" content="">
		<link rel="icon" href="favicon.ico">
		<title>
			{% block title %}Default title !
			{% endblock %}
		</title>
		<!-- Bootstrap core CSS -->
		<link href="{{ asset('css/bootstrap.min.css')}}" rel="stylesheet">
		<link
		rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
		<!-- Custom styles for this template -->
		<link href="{{ asset('css/jquery.bxslider.css')}}" rel="stylesheet">
		<link href="{{ asset('css/style.css')}}" rel="stylesheet"> {% block stylesheets %}{% endblock %}
		</head>

		<body>
			<!-- Navigation -->
			<nav class="navbar navbar-inverse navbar-fixed-top">
				<div class="container">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					</div>
					<div id="navbar" class="collapse navbar-collapse">
						<ul class="nav navbar-nav">
							<li class="active">
								<a href="{{ path('post_index') }}">Home</a>
							</li>
							<li>
								<a href="#about">Lifestyle</a>
							</li>
							<li>
								<a href="#contact">Travel</a>
							</li>
							<li class="{{ is_granted("IS_AUTHENTICATED_FULLY") == false ? "disabled"}}">
								<a href="{{ path('user_index')}}">Utilisateur</a>
							</li>
							<li>
								<a href="{{ path('post_about') }}">About Me</a>
							</li>
							<li>
								<a href="{{ path('post_about') }}">Contact</a>
							</li>
						</ul>

						<ul class="nav navbar-nav navbar-right">
							{% if is_granted("IS_AUTHENTICATED_FULLY") %}
								<li>

									<a href="{{ path('user_connected') }}">
									Bonjour    	{{ app.user.firstName ~ " " ~ app.user.lastName }}</a>
								</li>
								<li>
									<a href="{{ path('app_logout') }}">
										Logout</a>
								</li>
							{% else %}
								<li>
									<a href="{{ path('app_login') }}">Login</a>
								</li>
							{% endif %}
						</ul>
						<!--
						                <ul class="nav navbar-nav navbar-right">
						                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
						                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
