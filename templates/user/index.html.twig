{% extends 'randa.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

    <h1>List des utilisateurs ! âœ…</h1>

    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Prenom</th>
      <th scope="col">Nom</th>
      <th scope="col">Email</th>
      <th scope="col">Nb artciles</th>
    </tr>
  </thead>

  <tbody>
  {% for user in users %}
    <tr>
      <th scope="row">{{ user.id }}</th>
      <td>{{ user.firstName }}</td>
      <td>{{ user.lastName }}</td>
      <td>{{ user.email }}</td>
      <td>{{ user.news | length }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
